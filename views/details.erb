<h4>podrobnosty posta:</h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	<br />
 Added at <%= @row['created_date'] %>
 </p>
 <br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
	</p>
	<hr />
<% end %>
<p>
	<form action="/details/<%= @row['id'] %>" method="post">
	<textarea name="content" class="form-control" rows="6" placeholder="napishite text kommentariya"></textarea>
	<br /> 
	  <button type="submit" class="btn btn-primary">dobavit comment</button>
	</form>
</p>